{
  "name": "@e-n-v/repo",
  "version": "0.0.1",
  "license": "MIT",
  "module": "index.ts",
  "type": "module",
  "keywords": [
    "environment"
  ],
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@dotenvx/dotenvx": "^1.51.0",
    "@standard-schema/spec": "^1.0.0",
    "@stryker-mutator/core": "^9.2.0",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20251023.1",
    "check-1-2": "^0.0.5",
    "commander": "^14.0.2",
    "joi": "^18.0.1",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "superstruct": "^1.0.4",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.11",
    "tsup": "^8.5.0",
    "typescript": "^5",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "tsgo",
    "bundle": "bun run check:bundle && bun run --filter @e-n-v/env bundle",
    "check": "checks",
    "check:bundle": "bun scripts/check-bundle/run.ts",
    "check:format": "prettier --check .",
    "check:types": "tsgo",
    "demo": "bun run ./demo/demo.ts",
    "format": "prettier --write .",
    "lint": "oxlint",
    "prepublishOnly": "bun run check && bun run bundle",
    "test": "bun test"
  },
  "checks": {
    "runner": "bun",
    "scripts": [
      "test",
      "check:format",
      "check:types",
      "check:bundle",
      "lint"
    ]
  },
  "dependencies": {
    "bun-types": "^1.3.0"
  }
}
