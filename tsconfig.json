{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "paths": {
      "@e-n-v/core": ["./packages/core/src/index.ts"],
      "@e-n-v/core/*": ["./packages/core/src/*"],
      "@e-n-v/converters": ["./packages/converters/src/index.ts"],
      "@e-n-v/converters/*": ["./packages/converters/src/*"],
      "@e-n-v/channels": ["./packages/channels/src/index.ts"],
      "@e-n-v/channels/*": ["./packages/channels/src/*"],
      "@e-n-v/models": ["./packages/models/src/index.ts"],
      "@e-n-v/models/*": ["./packages/models/src/*"],
      "@e-n-v/schemas": ["./packages/schemas/src/index.ts"],
      "@e-n-v/schemas/*": ["./packages/schemas/src/*"],
      "@e-n-v/files": ["./packages/files/src/index.ts"],
      "@e-n-v/files/*": ["./packages/files/src/*"],
      "@e-n-v/parse": ["./packages/parse/src/index.ts"],
      "@e-n-v/parse/*": ["./packages/parse/src/*"],
      "@e-n-v/prompt": ["./packages/prompt/src/index.ts"],
      "@e-n-v/prompt/*": ["./packages/prompt/src/*"],
      "@e-n-v/env": ["./packages/env/src/index.ts"],
      "@e-n-v/env/*": ["./packages/env/src/*"]
    },

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}
